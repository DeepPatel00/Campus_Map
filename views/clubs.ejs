
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.cdnfonts.com/css/gotham-book" rel="stylesheet">
    <!-- Add the link to your CSS file -->
    <link rel="stylesheet" href="/style.css">

    <link rel="stylesheet" href="/style2.css">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">

</head>
<body id="thirdPage">
    <nav>
        <ul>
          <li><a href="home.html">Home</a></li>
          <li><a href="index.html">Map</a></li>
          <li><a href="/events">Events</a></li>
          <li><a class="active" href="/clubs">Clubs</a></li>
        </ul>
        <h2>GSW Clubs</h2>
      </nav>
      
      

      
      <div id="club-container">
        <% clubs.forEach(function(club) { %>
          <div class="club">
            <h2><%= club.title %></h2>
            <img src="<%= club.clubLogo %>" alt="Club logo">
            <p><%= club.description %></p>
            <% if (club.advisor) { %>
              <p><strong>Advisor:</strong> <%= club.advisor.name %>, <%= club.advisor.email %></p>
            <% } else { %>
              <p><strong>Advisor:</strong> Not available</p>
            <% } %>
            <p><strong>Time:</strong> <%= club.time %></p>
            <p><strong>Date:</strong> <%= club.date %></p>
            <p><strong>Location:</strong> <%= club.location %></p>
          </div>
        <% }); %>
        
    </div>
      
    <script>
        document.addEventListener('DOMContentLoaded', function() {
          const rsvpButtons = document.querySelectorAll('.rsvp-button');
          rsvpButtons.forEach(function(button) {
            button.addEventListener('click', function(event) {
              const clubId = event.target.getAttribute('data-club-id');
              console.log('RSVP for club with ID:', clubId);
            });
          });
        });
    </script>
    
</body>
</html>